# Mobility Trailblazers Test Environment Configuration
# This file contains default test environment variables

# Test Site URL (local Docker environment)
TEST_URL=http://localhost:8080

# Test User Credentials (DO NOT COMMIT ACTUAL PASSWORDS)
# These are overridden by .env.test.local
TEST_ADMIN_USERNAME=testadmin
TEST_ADMIN_PASSWORD=CHANGE_ME

TEST_JURY_USERNAME=jurytester1
TEST_JURY_PASSWORD=CHANGE_ME

TEST_JURY_ADMIN_USERNAME=juryadmintester
TEST_JURY_ADMIN_PASSWORD=CHANGE_ME

# Test Configuration
TEST_TIMEOUT=60000
TEST_RETRY_COUNT=2
TEST_SLOW_MO=0
TEST_HEADLESS=true
TEST_VIDEO=retain-on-failure
TEST_SCREENSHOT=only-on-failure

# Paths
TEST_DOWNLOADS_PATH=./tests/downloads
TEST_UPLOADS_PATH=./tests/fixtures

# WordPress Settings
WP_ADMIN_PATH=/wp-admin
WP_LOGIN_PATH=/wp-login.php
WP_AJAX_URL=/wp-admin/admin-ajax.php

# Plugin Settings
MT_PLUGIN_SLUG=mobility-trailblazers
MT_ADMIN_MENU_SLUG=mt-award-system

# Database (for direct DB access if needed)
TEST_DB_HOST=localhost
TEST_DB_PORT=3306
TEST_DB_NAME=wordpress_test
TEST_DB_USER=root
TEST_DB_PASSWORD=password

# Visual Regression Settings
VISUAL_THRESHOLD=0.2
VISUAL_UPDATE_SNAPSHOTS=false

# Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
SAVE_TRACE=on-first-retry