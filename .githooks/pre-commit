#\!/bin/bash
# CSS pre-commit hook
echo "Checking for new \!important declarations..."
git diff --cached --name-only | grep "\.css$" | while read file; do
  if git diff --cached "$file" | grep "^+" | grep -q "\!important"; then
    echo "ERROR: New \!important found in $file"
    exit 1
  fi
done
echo "CSS check passed\!"
